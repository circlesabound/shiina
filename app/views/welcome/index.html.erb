
<script type="text/javascript">
function onSelect () {
  var submit_button = document.getElementById("search_button");
  submit_button.style.backgroundColor = "#99CCFF";
}

function onBlur() {
   var submit_button = document.getElementById("search_button");
   submit_button.style.backgroundColor = "#EEEEEE";
}

function submitQuery() {
  var query = document.getElementById("q");
  if (query.value) {
    $("#everything").animate({
      'top' : '-180px'
    });
    $("#search-results").fadeIn(300);
    var results = document.getElementById("search-results");
    results.style.display = 'block';
  }
}

function showDescription(e) {
  var form = document.getElementById(e);
  if (form.style.display != "initial") {
    form.style.display = "initial";
  } else {
    form.style.display = "none";
  }
}

</script>

<div id='everything' class='center-div'>

  <h1>Shiina</h1>

  <%= render 'search_form' %>
  <br />

    <div id='search-results' class='col-md-6 col-md-offset-3' style='display:none;'>
  
      <% arr = ['HTML', 'CSS', 'JavaScript'] %>
      <% arr.each do |x| %>
      
      <div class='individual-result' onclick='showDescription("<%= x %>");'>
      
        <span class='result-title'><%= x %></span>
        <br />
        
        <div id='<%= x %>' class='result-description' style='display:none;'>

          This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>. This is a description of <%= x %>.
        
        </div>
      
